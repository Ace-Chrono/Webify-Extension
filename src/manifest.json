{
    "name": "Webify",
    "version": "0.1.0",
    "default_locale": "en",
    "description": "Customizing web pages to your liking",
    "manifest_version": 3,
    "permissions": ["storage", "tabs"],
    "host_permissions": ["http://localhost:5000/*", "https://webify-backend-hbp3.onrender.com/*"],
    "action": {
        "default_popup": "main.html",
        "default_icon": "assets/neuro.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "css": ["styles.css"],  
        "js": ["styles.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["clerk.html"],
        "matches": ["<all_urls>"]
      }
    ]
}